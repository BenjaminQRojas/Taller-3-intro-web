generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Sale {
  id          Int      @id @default(autoincrement())
  date        DateTime
  product     String
  category    String   // "Electr√≥nica", "Ropa", "Hogar", "Deportes"
  amount      Float
  quantity    Int
  region      String   // "Norte", "Centro", "Sur"
  customerAge Int?
  createdAt   DateTime @default(now())
}
